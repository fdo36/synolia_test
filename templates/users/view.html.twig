{% extends 'base.html.twig' %}


{% block style %}
    {# this style shouldn't be here #}
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>
{% endblock %}





{% block content %}
    <div id="header">
        <a href="{{ path(headerTexts['HomePath']) }}">{{ headerTexts['Home'] }}</a> |
        <a href="{{ path(headerTexts['TwigPath']) }}">{{ headerTexts['Twig'] }}</a> | 
        <a href="{{ path(headerTexts['IPEntitiesPath']) }}">{{ headerTexts['IPEntities'] }}</a> | 
        <a href="{{ path(headerTexts['ContactPath']) }}">{{ headerTexts['Contact'] }}</a> | 
        <a href="{{ path(headerTexts['FrenchPath']) }}">{{ headerTexts['French'] }}</a> |
        <a href="{{ path(headerTexts['EnglishPath']) }}">{{ headerTexts['English'] }}</a>
    </div>
    <h1>View user</h1>

    <table style="width:100%">
    <tr>
        <th>Id:</th>
        <td>{{user.id}}</td>
    </tr>
    <tr>
        <th>IP Address:</th>
        <td>{{user.ip}}</td>
    </tr>
    <tr>
        <th>Last Visit:</th>
        <td>{{user.lastVisit|date('Y-m-d') }}</td>
    </tr>
    <tr>
        <th>Visit Count:</th>
        <td>{{user.visitCount}}</td>
    </tr>
    </table>

    

    {% block page_contents %}{% endblock %}
{% endblock %}